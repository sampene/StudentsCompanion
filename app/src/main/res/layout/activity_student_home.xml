<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#e0e0e0"
    tools:context="com.makedu.studentscompanion.StudentHome">

    <include android:id="@+id/tool_bar" layout="@layout/tool_bar"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"
        >


    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:padding="5dp"
        card_view:cardCornerRadius="0dp"
        android:layout_weight="0.2"
        android:layout_margin="5dp"
        android:background="#fff"
        card_view:cardElevation="1.2dp"
        >
        <TextView
            android:layout_width="fill_parent"
            android:gravity="center"
            android:textSize="@dimen/abc_text_size_body_1_material"
            android:layout_height="match_parent"
            android:text="@string/enter_username"
            />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:padding="5dp"
            card_view:cardCornerRadius="0dp"
            android:layout_weight="0.5"
            android:layout_margin="5dp"
            android:background="#fff"
            card_view:cardElevation="1.2dp"
            android:id="@+id/">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"

                android:orientation="horizontal" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.0dip"
            android:padding="4.0dip" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="icon"
                android:src="@drawable/abc_btn_radio_to_on_mtrl_000" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="80dip"
            android:padding="4.0dip" >

            <EditText
                android:id="@+id/enteruname"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:cursorVisible="true"
                android:ems="10"
                android:textStyle="bold"
                android:hint="name"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/myPrimaryColor"
                android:textColorHint="@color/myPrimaryColor"
                 />
        </LinearLayout>
</LinearLayout>
            
            
            
            
          


            </android.support.v7.widget.CardView>

    </LinearLayout>

</LinearLayout>
